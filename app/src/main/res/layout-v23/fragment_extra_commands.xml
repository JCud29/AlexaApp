<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".extraCommands">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:foreground="@drawable/ic_baseline_play_arrow_24"
        android:text="@string/play_music"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTimer"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="184dp"
        android:foreground="@mipmap/icon5min"
        android:text="@string/set_a_5_minute_timer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnPlay" />

    <Button
        android:id="@+id/btnTimerLeft"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="8dp"
        android:foreground="@mipmap/icontimerleft"
        android:text="@string/how_long_left_on_my_timer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnPause" />

    <Button
        android:id="@+id/btnTimerCancel"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="184dp"
        android:foreground="@mipmap/icontimercancel"
        android:shadowRadius="10"
        android:text="@string/cancel_timer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnTimer"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btnShopping"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="8dp"
        android:text="@string/what_is_on_my_shopping_list"
        app:icon="@drawable/ic_baseline_add_shopping_cart_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnTimer" />

    <Button
        android:id="@+id/btnPause"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:foreground="@drawable/ic_baseline_pause_24"
        android:text="@string/pause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnExtraToHome"
        android:layout_width="372dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:text="@string/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTimerCancel" />

</androidx.constraintlayout.widget.ConstraintLayout>